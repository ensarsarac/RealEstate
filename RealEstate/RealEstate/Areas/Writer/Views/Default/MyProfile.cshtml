
@model ProfileViewModel
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>
<hr />

<form method="post" action="/writer/Default/MyProfile/" enctype="multipart/form-data">

    <div class="form-group">
        @Html.Label("Adınız")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Adınız")
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Telefon")
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Resim")
        <input type="file" class="form-control" asp-for="@Model.Image" />
    </div>
    <div class="form-group">
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Writer/Default/Index/" class="btn btn-secondary">İptal Et</a>

</form>