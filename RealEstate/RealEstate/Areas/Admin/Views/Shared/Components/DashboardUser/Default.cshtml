
@model List<EntityLayer.Concrete.AppUser>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Kullanıcılar</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content table-responsive">
                <table class="table table-hover no-margins">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Telefon</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><small>@item.Id</small></td>
                                <td><img src="~/UserImage/@item.Image"class="img-thumbnail rounded-pill" style="width:50px;height:50px;" /> @item.Name @item.Surname</td>
                                <td>@item.Email</td>
                                <td class="text-navy"> <i class="fa fa-phone"></i> @item.PhoneNumber </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>