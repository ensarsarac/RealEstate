
@model List<EntityLayer.Concrete.Property>

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>İlanlar</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-hover margin bottom">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>İlan Başlığı</th>
                                <th class="text-center">İlanı Oluşturan Kullanıcı</th>
                                <th class="text-center">Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.ID</td>
                                    <td>
                                        <img src="~/PropertyImage/@item.Image" class="img-thumbnail" style="width:50px; height:50px;" /> @item.Title
                                    </td>
                                    <td class="text-center small">@item.AppUser.Name</td>
                                    <td class="text-center"><span class="label label-primary">@item.Date.ToString("dd-MMM-yyyy")</span></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>